<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage <%= server.name %> - Bot Dashboard</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>Manage <%= server.name %></h1>
        <a href="/dashboard"><button>Back to Dashboard</button></a>
    </header>

    <main>
        <h2>Bot Management</h2>
        <div class="bot-management">
            <button onclick="toggleBotStatus()">Toggle Bot Status</button>
            <p id="status-text">Loading...</p>
        </div>
    </main>

    <footer>
        <p>Discord Bot Dashboard</p>
    </footer>

    <script>
        // Simulating the bot's status toggle
        function toggleBotStatus() {
            const statusText = document.getElementById('status-text');
            const currentStatus = statusText.textContent.trim();

            if (currentStatus === 'Loading...') return;

            const newStatus = currentStatus === 'Online' ? 'Offline' : 'Online';
            statusText.textContent = newStatus;

            alert(`Toggled bot status to ${newStatus}`);
        }

        // Fetch the current bot status when the page loads (simulated)
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const statusText = document.getElementById('status-text');
                statusText.textContent = 'Online'; // Assuming the bot is online
            }, 1000); // Simulate loading time
        });
    </script>
</body>
</html>
