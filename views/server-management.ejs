<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage <%= server.name %> - Bot Dashboard</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>Manage <%= server.name %></h1>
        <a href="/dashboard"><button>Back to Dashboard</button></a>
    </header>

    <main>
        <div>
            <h3>Bot Actions</h3>
            <button onclick="sendMessage()">Send Message</button>
            <button onclick="banUser()">Ban User</button>
        </div>
    </main>

    <footer>
        <p>Discord Bot Dashboard - Manage your bot</p>
    </footer>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        function sendMessage() {
            const message = prompt('Enter the message you want to send to the server:');
            if (message) {
                socket.emit('sendMessage', '<%= server.id %>', message);
            }
        }

        function banUser() {
            const userId = prompt('Enter the user ID you want to ban:');
            if (userId) {
                socket.emit('banUser', '<%= server.id %>', userId);
            }
        }
    </script>
</body>
</html>
