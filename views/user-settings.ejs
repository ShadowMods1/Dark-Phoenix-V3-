<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dark Pheonix(V3) | Settings</title>
    <link
      rel="icon"
      href="https://i.postimg.cc/y87h3x7y/0dc15569002a714e09ef3b03da9ac43d-removebg-preview.png"
      type="image/x-icon"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary: #7289DA;
        --dark: #1e1e2e;
        --darker: #151520;
        --bright: #ffffff;
        --accent: #ff4ecd;
        --discord-bg: #36393f;
        --discord-channel: #2f3136;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        background: var(--darker);
        color: var(--bright);
        min-height: 100vh;
      }

      .navbar {
        background: var(--dark);
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        flex-wrap: wrap;
      }

      .logo {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .logo img {
        width: 4rem; /* Slightly larger */
        height: auto;
      }

      .nav-links {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
      }

      @media (max-width: 768px) {
        .navbar {
          flex-direction: column;
          gap: 1rem;
          text-align: center;
        }

        .nav-links {
          width: 100%;
          justify-content: center;
        }

        .logo {
          width: 100%;
          justify-content: center;
        }
      }

      .nav-links a {
        color: var(--bright);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
        padding: 0.5rem;
      }

      .nav-links a:hover {
        color: var(--primary);
      }

      main {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        max-width: 1400px;
        margin: 0 auto;
      }

      h2 {
        font-size: clamp(1.5rem, 3vw, 2rem);
        color: var(--bright);
        margin-bottom: 1rem;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      label {
        font-size: 1.2rem;
        color: var(--bright);
      }

      input, select {
        padding: 0.8rem;
        background: var(--discord-channel);
        border: 1px solid var(--discord-bg);
        border-radius: 10px;
        color: var(--bright);
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s;
      }

      input:focus, select:focus {
        border-color: var(--primary);
      }

      button {
        background: var(--primary);
        color: var(--bright);
        padding: 1rem;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      button:hover {
        background: var(--accent);
      }

      .card {
        background: var(--dark);
        border-radius: 10px;
        padding: 1.5rem;
        transition: transform 0.3s;
        border: 1px solid transparent;
      }

      .card:hover {
        transform: translateY(-5px);
        border-color: var(--primary);
      }
    </style>
  </head>
  <body>
    <div class="glow"></div>

    <nav class="navbar">
      <div class="logo">
        <img
          src="https://i.postimg.cc/y87h3x7y/0dc15569002a714e09ef3b03da9ac43d-removebg-preview.png"
          alt="Dark Phoenix Logo"
        />
        <h1>Dark Phoenix (V3)</h1>
      </div>
      <div class="nav-links">
        <a href="/">Home</a>
        <a href="/commands">Commands</a>
        <a href="/user-settings">Settings</a>
        <a href="/support">Support</a>
        <a href="/forum">Forum</a>
      </div>
    </nav>

    <main>
      <div class="card">
        <h2>User Settings</h2>
        <form id="settingsForm">
          <!-- Bot Name -->
          <label for="botName">Bot Name:</label>
          <input type="text" id="botName" name="botName" required />

          <!-- Bot Prefix -->
          <label for="botPrefix">Bot Prefix:</label>
          <input type="text" id="botPrefix" name="botPrefix" required />

          <!-- Bot Status -->
          <label for="botStatus">Bot Status:</label>
          <select id="botStatus" name="botStatus">
            <option value="online">Online</option>
            <option value="offline">Offline</option>
            <option value="dnd">Do Not Disturb</option>
            <option value="invisible">Invisible</option>
            <option value="custom">Custom Message</option>
          </select>

          <!-- Bot Activity -->
          <label for="botActivity">Bot Activity:</label>
          <select id="botActivity" name="botActivity">
            <option value="playing">Playing</option>
            <option value="listening">Listening</option>
            <option value="watching">Watching</option>
          </select>

          <!-- Bot Custom Activity Message -->
          <label for="botActivityMessage">Custom Activity Message:</label>
          <input type="text" id="botActivityMessage" name="botActivityMessage" />

          <!-- Bot Language -->
          <label for="botLanguage">Bot Language:</label>
          <select id="botLanguage" name="botLanguage">
            <option value="en">English</option>
            <option value="es">Spanish</option>
            <option value="fr">French</option>
            <option value="de">German</option>
            <option value="it">Italian</option>
          </select>

          <!-- Save Button -->
          <button type="submit">Save Settings</button>
        </form>
      </div>
    </main>
  </body>
</html>
