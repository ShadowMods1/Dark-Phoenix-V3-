<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>Welcome, <%= user.profile.username %>!</h1>
    </header>
    <main>
        <h2>Your Servers:</h2>
        <div id="servers">
            <% servers.forEach(function(server) { %>
                <div class="server-card">
                    <h3><%= server.name %></h3>
                    <p><%= server.id %></p>
                    <div class="buttons">
                        <button onclick="sendMessage()">Send Message</button>
                        <button onclick="banUser()">Ban User</button>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>
    <footer>
        <p>Discord Bot Dashboard</p>
    </footer>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        function sendMessage() {
            const message = prompt('Enter the message you want to send to the server:');
            if (message) {
                socket.emit('sendMessage', '<%= server.id %>', message);
            }
        }

        function banUser() {
            const userId = prompt('Enter the user ID you want to ban:');
            if (userId) {
                socket.emit('banUser', '<%= server.id %>', userId);
            }
        }
    </script>
</body>
</html>
